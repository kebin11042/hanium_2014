<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false" >
        <shape>
            <solid
                android:color="@color/clear" />
            <padding
                android:top="6dip"
                android:bottom="6dip"
                android:left="6dip"
                android:right="6dip"/>
        </shape>
    </item>

    <item
        android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/Brown200" />
            <padding
                android:top="6dip"
                android:bottom="6dip"
                android:left="6dip"
                android:right="6dip"/>
        </shape>
    </item>
</selector>