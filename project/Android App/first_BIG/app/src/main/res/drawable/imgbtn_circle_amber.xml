<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false" >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/AmberA200" />
            <padding
                android:top="8dip"
                android:bottom="8dip"
                android:left="8dip"
                android:right="8dip" />
        </shape>
    </item>

    <item
        android:state_pressed="true" >
        <shape
            android:shape="oval">
            <padding
                android:top="8dip"
                android:bottom="8dip"
                android:left="8dip"
                android:right="8dip" />
            <solid
                android:color="@color/AmberA400" />
        </shape>
    </item>
</selector>