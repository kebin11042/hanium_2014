<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="firstbig.com.example.first_big" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Wattcher"
        android:theme="@style/AppThemeLight" >
        <activity
            android:name=".MainActivity"
            android:label="Wattcher"
            android:theme="@style/AppThemeLightNoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TabActivity"/>
        <activity android:name=".LogInActivity" android:theme="@style/AppThemeLightNoAction"/>
        <activity android:name=".JoinActivity" android:theme="@style/AppThemeLightNoAction"/>
        <activity android:name=".PayInfoActivity"/>
        <activity android:name=".EnergyPoolActivity" />
    </application>

</manifest>
